<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minminaya.materialdesigndemo.selection_control.SelectControlActivity">

    <RadioGroup
        android:id="@+id/anchor2"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RadioButton
            android:id="@+id/radio_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:checked="true"
            android:clickable="true"
            android:text="Radio Button"
            android:theme="@style/MyRaidoButton" />

        <RadioButton
            android:id="@+id/radio_btn2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/radio_btn"
            android:clickable="true"
            android:text="Radio Button"
            android:theme="@style/MyRaidoButton" />
    </RadioGroup>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/anchor2"
        android:checked="false"
        android:gravity="center"
        android:text="switch"
        android:textSize="25sp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/switch1"
        android:checked="true"
        android:gravity="center"
        android:text="switch"
        android:textSize="25sp"
        android:theme="@style/MySwitch" />
</RelativeLayout>
