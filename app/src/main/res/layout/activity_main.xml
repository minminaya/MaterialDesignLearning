<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minminaya.materialdesigndemo.MainActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox"
                android:textSize="21sp"
                android:theme="@style/MainActivityButton" />
            <Button
                android:id="@+id/btn_text_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text_fields"
                android:textSize="21sp"
                android:theme="@style/MainActivityButton" />

            <Button
                android:id="@+id/btn_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toolbar"
                android:textSize="21sp"
                android:theme="@style/MainActivityButton" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
