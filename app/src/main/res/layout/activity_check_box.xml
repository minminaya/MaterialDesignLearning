<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.minminaya.materialdesigndemo.selection_control.CheckBoxActivity">

    <CheckBox
        android:id="@+id/checkbox_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="默认Check Box"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkbox_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Box"
        android:textSize="30sp"
        android:theme="@style/CheckBoxActivityCheckBox" />
</LinearLayout>
